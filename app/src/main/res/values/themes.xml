<resources>

    <style name="Theme.DoquStore" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- custom theme -->
        <item name="android:statusBarColor">@color/neutral_60</item>
        <item name="android:navigationBarColor">@color/neutral_60</item>
        <item name="fontFamily">@font/satoshi</item>
        <item name="color">@color/neutral_90</item>
        <item name="imageButtonStyle">@style/ImageButton</item>
        <item name="cardViewStyle">@style/Card</item>
    </style>

    <style name="TextHeadingS" parent="Theme.DoquStore">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/satoshi_bold</item>
        <item name="lineHeight">30dp</item>
    </style>

    <style name="TextCaption" parent="Theme.DoquStore">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/satoshi</item>
        <item name="lineHeight">15dp</item>
    </style>

    <style name="TextCaptionMedium" parent="TextCaption">
        <item name="fontFamily">@font/satoshi_medium</item>
    </style>

    <style name="TextBody1" parent="Theme.DoquStore">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/satoshi</item>
        <item name="lineHeight">21dp</item>
    </style>

    <style name="TextBody1Medium" parent="TextBody1">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/satoshi_medium</item>
        <item name="lineHeight">21dp</item>
    </style>

    <style name="TextBody1Bold" parent="TextBody1">
        <item name="fontFamily">@font/satoshi_bold</item>
    </style>

    <style name="TextBody2" parent="Theme.DoquStore">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/satoshi</item>
        <item name="lineHeight">18dp</item>
    </style>

    <style name="TextBody2Medium" parent="TextBody2">
        <item name="fontFamily">@font/satoshi_medium</item>
    </style>

    <style name="TextBody2Bold" parent="TextBody2">
        <item name="fontFamily">@font/satoshi_bold</item>
    </style>

    <style name="TextRedirect" parent="TextBody2Bold">
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="TextButtonL" parent="Theme.DoquStore">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/satoshi</item>
        <item name="lineHeight">24dp</item>
    </style>

    <style name="TextButtonLBold" parent="TextButtonL">
        <item name="fontFamily">@font/satoshi_bold</item>
    </style>

    <style name="Input" parent="TextBody2">
        <item name="android:background">@drawable/input</item>
    </style>

    <style name="Card">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="TabLayout">
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/primary_main</item>
        <item name="tabSelectedTextColor">@color/primary_main</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabTextColor">@color/neutral_60</item>
    </style>

    <style name="TabTextAppearance" parent="TextBody2Medium">
        <item name="textAllCaps">false</item>
    </style>

    <style name="ImageButton">
        <item name="android:background">@drawable/image_button</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ButtonL" parent="TextButtonLBold">
        <item name="textAllCaps">false</item>
    </style>

</resources>